<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainPageBG"
    android:fadingEdge="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainPageBG"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="0dp" >

            <ImageView
                android:id="@+id/department_head"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:padding="8dp"
                android:src="@drawable/group_head" />

            <TextView
                android:id="@+id/department_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@id/department_head"
                android:layout_marginLeft="95dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:textColor="#194e62"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/department_username"
                android:layout_below="@id/department_username"
                android:text="创建者："
                android:textColor="#60b1ce"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/department_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView2"
                android:layout_alignBottom="@+id/textView2"
                android:layout_toRightOf="@+id/textView2"
                android:textColor="#60b1ce"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/department_member_layout"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/bottom_top_line1"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:padding="8dp"
                    android:text="群成员"
                    android:textColor="#194e62"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/department_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:padding="8dp"
                    android:textColor="#60b1ce"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/department_description_layout"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/bottom_line1"
                android:clickable="false"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:padding="8dp"
                    android:text="备注"
                    android:textColor="#194e62"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/department_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:padding="8dp"
                    android:textColor="#60b1ce"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/department_send_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/btn_style_green1"
            android:padding="12dp"
            android:text="发消息"
            android:textColor="#29728d"
            android:textSize="16sp" />

        <Button
            android:id="@+id/department_usermanager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/btn_style_w"
            android:padding="12dp"
            android:text="邀请成员"
            android:textColor="#29728d"
            android:textSize="16sp" 
            android:visibility="gone"/>

        <Button
            android:id="@+id/department_del_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/btn_style_red"
            android:padding="12dp"
            android:text="解散群组"
            android:textColor="#333"
            android:textSize="16sp" />
    </LinearLayout>

</ScrollView>