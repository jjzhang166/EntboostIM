<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eee"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/addc_account_layout"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="25dp" >

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/editbox" />

        <ImageView
            android:id="@+id/login_user_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/account" />

        <EditText
            android:id="@+id/addc_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@id/login_user_img"
            android:background="@null"
            android:hint="联系人帐号"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/addc_group_layout"
        android:layout_width="match_parent"
         android:layout_below="@id/addc_account_layout"
        android:layout_height="38dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="10dp" >

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/editbox" />

        <ImageView
            android:id="@+id/login_user_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/account" />

        <EditText
            android:id="@+id/addc_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@id/login_user_img"
            android:background="@null"
            android:hint="分组名称"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/addc_username_layout"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@id/addc_group_layout"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="10dp" >

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/editbox" />

        <ImageView
            android:id="@+id/login_passwd_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/account" />

        <EditText
            android:id="@+id/addc_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dip"
            android:layout_toRightOf="@id/login_passwd_img"
            android:background="@null"
            android:hint="联系人名称"
            android:inputType="text"
            android:singleLine="true"
            android:textSize="18sp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/addc_desc"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/addc_username_layout"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/editbox"
        android:ems="10"
        android:hint="备注"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/addc_add_btn"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/addc_desc"
        android:layout_alignRight="@+id/addc_desc"
        android:layout_below="@+id/addc_desc"
        android:layout_marginTop="17dp"
        android:background="@drawable/btn_style_green"
        android:text="保存"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <Button
        android:id="@+id/addc_cancel_btn"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/addc_desc"
        android:layout_alignRight="@+id/addc_desc"
        android:layout_below="@+id/addc_add_btn"
        android:layout_marginTop="26dp"
        android:background="@drawable/btn_style_white"
        android:text="取消"
        android:textColor="#333"
        android:textSize="18sp" />

</RelativeLayout>