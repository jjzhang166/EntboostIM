<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainPageBG"
    android:fadingEdge="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainPageBG"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="0dp" >

            <ImageView
                android:id="@+id/member_head"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:padding="8dp"
                android:src="@drawable/head" />

            <TextView
                android:id="@+id/member_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@id/member_head"
                android:layout_marginLeft="95dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:textColor="#194e62"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/member_username"
                android:layout_alignLeft="@id/member_username"
                android:text="帐   号："
                android:textColor="#60b1ce"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/member_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView2"
                android:layout_alignBottom="@+id/textView2"
                android:layout_toRightOf="@+id/textView2"
                android:textColor="#60b1ce"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/member_name_layout"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/bottom_top_line1"
                android:clickable="false"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:padding="8dp"
                    android:text="名称"
                    android:textColor="#194e62"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/member_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:padding="8dp"
                    android:textColor="#60b1ce"
                    android:textSize="12sp"  />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/member_description_layout"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/bottom_line1"
                android:clickable="false"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="8dp"
                    android:layout_marginLeft="15dp"
                    android:text="备注"
                    android:textColor="#194e62"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/member_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:padding="8dp"
                    android:textColor="#60b1ce"
                    android:textSize="12sp"/>
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/member_send_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/btn_style_green1"
            android:padding="12dp"
            android:text="发消息"
            android:textColor="#29728d"
            android:textSize="16sp"/>
        
        <Button
            android:id="@+id/member_addpgroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/btn_style_w"
            android:padding="12dp"
            android:text="加入群组"
            android:textColor="#29728d"
            android:textSize="16sp" />
        
        <Button
            android:id="@+id/member_del"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/btn_style_w"
            android:padding="12dp"
            android:text="移除成员"
            android:textColor="#29728d"
            android:textSize="16sp" />

        <Button
            android:id="@+id/member_set_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/btn_style_w"
            android:padding="12dp"
            android:text="设置默认名片"
            android:textColor="#29728d"
            android:textSize="16sp" />
    </LinearLayout>

</ScrollView>